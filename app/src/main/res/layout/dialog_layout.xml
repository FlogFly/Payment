    android:layout_height="wrap_content"
    android:background="#999999"
    >

    <TextView
        android:id="@+id/ali"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="支付宝"
        />

    <TextView
        android:id="@+id/wx"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="微信"
        />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="银联"
        />

</LinearLayout>